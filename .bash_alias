# .bash_alias

# Enable color support of ls and also add handy aliases
if [[ "${TERM_COLOR}" == "yes" ]]; then
	# Try possible supported options with 'ls'
	ls -G >/dev/null 2>&1 && alias ls='ls -G'
	ls --color=auto >/dev/null 2>&1 && alias ls='ls --color=auto'
	# Set other utilities for color output
	alias grep='grep --color=auto'
	alias fgrep='fgrep --color=auto'
	alias egrep='egrep --color=auto'
fi
# SHortcut to get up one folder level
alias ..='cd ..'
# Some additional aliases for 'ls'
alias l='ls -CF'
alias ll='ls -l'
alias la='ll -A'
alias lr='ll -tr'
alias lla='ls -al'
alias df='df -h'
alias du='du -h'
alias dir='ls -l'
alias vdir='ls -l'
alias ltr='ls -ltr'
alias ltra='ls -altr'
# Airport check shortcut
alias airport='/System/Library/PrivateFrameworks/Apple80211.framework/Versions/Current/Resources/airport'
# Launch services register system
alias lsregister='/System/Library/Frameworks/CoreServices.framework/Versions/Current/Frameworks/LaunchServices.framework/Versions/Current/Support/lsregister'
alias rebuild='lsregister -kill -r -domain local -domain system -domain user'
# Only define swift as an alias on early swift versions
[[ -z "$(command -v swift)" ]] && alias swift='lldb --repl'
# Some quick one liner to create directories inside protected areas
alias pmkdir='sudo install -o $(id -u) -g $(id -g) -d'
# Verify GIT projects that need a fetch
alias git_check='for PRJ in $(ls *); do if [[ -d ${PRJ} ]]; then pushd ${PRJ} > /dev/null; if [[ ! -d .git ]]; then echo "Projeto ${PRJ} is not a git repo"; fi; popd > /dev/null; fi; done;'

# Time Machine backup file controls and check
alias tm_add='xattr -d com.apple.metadata:com_apple_backup_excludeItem'
alias tm_remove='xattr -w com.apple.metadata:com_apple_backup_excludeItem com.apple.backupd'
alias tm_check='tmutil isexcluded'

# CrashPlan tunnel setup
#alias crashplan='ssh -L 4200:127.0.0.1:4243 crashplan@crashplan.internal-v2-lab.com.br -N -v -v'

# Utilities for VMware AppCatalyst daemon if installed
if [[ -n "$(command -v appcatalyst-daemon)" ]]; then
	alias catalyst_vmnet='sudo /opt/vmware/appcatalyst/libexec/services/services.sh'
	alias catalyst_start='bash_fork appcatalyst-daemon'
	alias catalyst_stop='gkill -TERM -F ${HOME}/.local/var/run/appcatalyst-daemon.pid'
fi

# Some usefull docker aliases (if docker installed)
if [[ -n "$(command -v docker)" ]]; then
	alias swift3_linux="docker run --cap-add sys_ptrace -it --rm swift swift"
fi

