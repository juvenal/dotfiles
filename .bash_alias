alias thoughts='cd ${HOME}/Documents/Projects/Sites/Active\ Sites/Development/thoughts'
alias vmnet='sudo /opt/vmware/appcatalyst/libexec/services/services.sh'

# Verify GIT projects that need a fetch
alias check_git='for PRJ in $(ls *); do if [[ -d ${PRJ} ]]; then pushd ${PRJ} > /dev/null; if [[ ! -d .git ]]; then echo "Projeto ${PRJ} is not a git repo"; fi; popd > /dev/null; fi; done;'

# Some cd aliases
alias ..='cd ..'

# Remove and/or start VMware AppCatalyst daemon
alias start_catalyst='bash_fork appcatalyst-daemon'
alias stop_catalyst='gkill -TERM -F ${HOME}/.local/var/run/appcatalyst-daemon.pid'

# This alias is required on Fedora and RHEL to allow normal users to run docker
# It must be accompained by the sudo docker config (as well as inclusion of the
# docker group).
[[ "$(uname -s)" == "Linux" ]] && \
    alias docker='sudo /usr/bin/docker'
